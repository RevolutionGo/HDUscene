/* pages/show/show.wxss */
page {
  background: #1f1d61;
}

.showpage {
  height: 1140rpx;
  margin: 25rpx;
  margin-bottom: 20rpx;
  background-color: #fff;

}

.img{
  margin: 20rpx;
  width: 95%;
  height: 100%;
}

.title{
  font-size: 60rpx;
  margin: 20rpx 0rpx 40rpx 20rpx;
  color: #1f1d61;
}
.price{
  font-size: 40rpx;
  margin: 20rpx 0rpx 40rpx 20rpx;

}

.share { 
  height: 120rpx;
  width: 120rpx;
  position: fixed;
  bottom: 190rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.171);
  border-radius: 50%;
  z-index: 10;
} 
.share image {
  height: 70rpx;
  width: 70rpx;
}
.share text {
  color: #1296db;  
}

.share button {
  position: absolute;
  height: 100%;
  width: 100%;
  opacity: 0.1;
  z-index: 99;
}

